		</activity>

		<activity android:name="CalculatePiActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="GuiManipulatorActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
